<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>GETFridgeInventory</servlet-name>
        <servlet-class>GETFridgeInventory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GETFridgeInventory</servlet-name>
        <url-pattern>/GETFridgeInventory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OpenItem</servlet-name>
        <servlet-class>OpenItem</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenItem</servlet-name>
        <url-pattern>/OpenItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddItemToFridge</servlet-name>
        <servlet-class>AddItemToFridge</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddItemToFridge</servlet-name>
        <url-pattern>/AddItemToFridge</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveItem</servlet-name>
        <servlet-class>RemoveItem</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoveItem</servlet-name>
        <url-pattern>/RemoveItem</url-pattern>
    </servlet-mapping>

</web-app>